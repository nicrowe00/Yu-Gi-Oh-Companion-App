<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.YugiohCompanionApp"
    tools:context=".fragments.DuelFragment"
    android:background="@drawable/yugioh_counter">

    <Button
        android:id="@+id/onePlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:background="@color/black"
        android:fontFamily="@font/msmincho"
        android:text="@string/oneplayer"
        android:textAlignment="center"
        android:textColor="@color/yugioh_yellow"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/twoPlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="@string/twoplayer"
        android:fontFamily="@font/msmincho"
        android:textAlignment="center"
        android:textColor="@color/yugioh_yellow"
        android:textSize="30sp"
        android:textStyle="italic"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onePlayerButton" />

</androidx.constraintlayout.widget.ConstraintLayout>