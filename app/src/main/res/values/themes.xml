<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YugiohCompanionApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2D2E2E</item>
        <item name="colorPrimaryVariant">#1F2020</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.YugiohCompanionApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar" parent="Theme.YugiohCompanionApp">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Theme.YugiohCompanionApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YugiohCompanionApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toggleStyle">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/grey</item>
    </style>

</resources>